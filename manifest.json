{
  "manifest_version": 3,
  "name": "Facebook Page Phone Extract",
  "version": "1.1",
  "description": "Extracts phone numbers and page link manually into CSV.",
  "permissions": ["activeTab", "scripting", "downloads", "storage"],
  "host_permissions": ["https://www.facebook.com/*", "https://biddasoft.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["content.js"]
    }
  ]
}
